local dataHandle = io.popen(
	"echo '{}' | /usr/libexec/rpcd/lime-location call nodes_and_links", "r" )

local ssHandle = io.popen("shared-state insert nodes_and_links", "w")
ssHandle:write(dataHandle:read("*a"))

dataHandle:close()
ssHandle:close()
